{
  "name": "nhl-companion",
  "description": "A desktop application to stay updated on the NHL.",
  "version": "1.0.0",
  "private": true,
  "main": "electron-starter.js",
  "homepage": "./",
  "dependencies": {
    "@types/jest": "24.0.19",
    "@types/node": "12.11.1",
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2",
    "moment": "^2.24.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts": "3.2.0",
    "typescript": "3.6.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-react": "react-scripts build",
    "build-windows": "npm run build-react && rm public/build -rf && mv build public/",
    "electron": "electron electron-starter.js",
    "dev": "nf start",
    "package-windows": "electron-packager . --platform=win32 --out=out --overwrite --icon=assets/nhl.ico"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^6.0.12",
    "electron-packager": "^14.0.6",
    "foreman": "^3.0.1"
  }
}
